<%= form_for(@transaction) do |f| %>
  <% if @transaction.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@transaction.errors.count, "error") %> prohibited
        this transaction from being saved:
      </h2>
      <ul>
        <% @transaction.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :transaction_type %><br />
    <%= f.select(:transaction_type, Transaction.transaction_types.keys, :prompt => 'Select') %>
  </div>

  <div class="field">
    <%= f.label :amount %><br />
    <%= f.text_field :amount, required: true %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<%end%>